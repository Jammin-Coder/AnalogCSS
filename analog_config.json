{
    "user_css_file_paths": ["app.css"],
    "output_css_file_path": "analog.css",

    "input_paths": ["./"],
    "input_extensions": [".html", ".php"],

    "custom_values": {
        "col": "column"
    },

    "media_query_type": "min-width",

    "class_mappings": {
        "p": {
            "property": "padding",
            "unit": "rem"
        },

        "pl": {
            "property": "padding-left",
            "unit": "rem"
        },

        "pr": {
            "property": "padding-right",
            "unit": "rem"
        },

        "pb": {
            "property": "padding-bottom",
            "unit": "rem"
        },

        "pt": {
            "property": "padding-top",
            "unit": "rem"
        },

        "px": {
            "property": ["padding-left", "padding-right"],
            "unit": "rem"
        },

        "py": {
            "property": ["padding-bottom", "padding-top"],
            "unit": "rem"
        },
        
        "m": {
            "property": "margin",
            "unit": "rem"
        },

        "ml": {
            "property": "margin-left",
            "unit": "rem"
        },

        "mr": {
            "property": "margin-right",
            "unit": "rem"
        },

        "mb": {
            "property": "margin-bottom",
            "unit": "rem"
        },

        "mt": {
            "property": "margin-top",
            "unit": "rem"
        },

        "my": {
            "property": ["margin-top", "margin-bottom"],
            "unit": "rem"
        },

        "mx":{
            "property": ["margin-left", "margin-right"],
            "unit": "rem"
        },
        
        "max-w": {
            "property": "max-width"
        },

        "min-w": {
            "property": "min-width"
        },

        "w": {
            "property": "width"
        },

        "h": {
            "property": "height"
        },

        "bg": {
            "property": "background-color"
        },
        
        "d": {
            "property": "display"
        },

        "flex-dir": {
            "property": "flex-direction"
        },

        "justify": {
            "property": "justify-content"
        },

        "align": {
            "property": "align-items"
        },

        "text": {
            "property": "text-align"
        }
    },

    "breakpoint_values": {
        "xs": "300px",
        "sm": "500px",
        "md": "900px",
        "lg": "1300px",
        "xl": "1600px"
    }
}