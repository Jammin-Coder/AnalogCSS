{
    "user_css_file_paths": ["app.css"],
    "output_css_file_path": "analog.css",

    "input_paths": ["./"],
    "input_extensions": [".html", ".php"],

    "custom_values": {
        "col": "column",
    },

    "media_query_type": "min-width",

    "class_mappings": {
        "p": {
            "property": "padding",
            "unit": "rem"
        },

        "px": {
            "property": ["padding-left", "padding-right"],
            "unit": "rem"
        },
        
        "py": {
            "property": ["padding-top", "padding-bottom"],
            "unit": "rem"
        },
        
        "m": {
            "property": "margin",
            "unit": "rem"
        },
        
        "my":{
            "property": ["margin-top", "margin-bottom"],
            "unit": "rem"
        },

        "mx":{
            "property": ["margin-left", "margin-right"],
            "unit": "rem"
        },
        
        "max-w": {
            "property": "max-width"
        },

        "min-w": {
            "property": "min-width"
        },

        "w": {
            "property": "width"
        },

        "h": {
            "property": "height"
        },

        "bg": {
            "property": "background-color"
        },

        "flex-dir": {
            "property": "flex-direction"
        },

        "justify": {
            "property": "justify-content"
        },

        "align": {
            "property": "align-content"
        }
    },

    "breakpoint_values": {
        "xs": "300px",
        "sm": "600px",
        "md": "1000px",
        "lg": "1400px",
        "xl": "1700px"
    }
}
